<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoChangeActivity"
    android:background="#a1a7a7"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/itemback"
        android:orientation="horizontal"
        android:padding="5dp">

        <EditText
            android:id="@+id/jam3iyaName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/filllayout"
            android:ems="10"
            android:gravity="center"
            android:hint="اسم الجمعية"
            android:inputType="textPersonName"
            android:padding="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/filllayout"
            android:gravity="center"
            android:padding="2dp"
            android:text="اسم الجمعية"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/itemback"
        android:orientation="horizontal"
        android:padding="5dp">

        <EditText
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/filllayout"
            android:ems="10"
            android:gravity="center"
            android:hint="رقم الجمعية"
            android:inputType="phone"
            android:padding="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/filllayout"
            android:gravity="center"
            android:padding="2dp"
            android:text="رقم الجمعية"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/itemback"
        android:orientation="horizontal"
        android:padding="5dp">

        <EditText
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/filllayout"
            android:ems="10"
            android:gravity="center"
            android:hint="عدد المتكفل بهم"
            android:inputType="numberDecimal"
            android:padding="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/filllayout"
            android:gravity="center"
            android:padding="2dp"
            android:text="عدد المتكفل بهم"
            android:textSize="10sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/itemback"
        android:orientation="horizontal"
        android:padding="5dp">

        <EditText
            android:id="@+id/ccp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/filllayout"
            android:ems="10"
            android:gravity="center"
            android:hint="رقم الحساب البريدي"
            android:inputType="text"
            android:padding="3dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/filllayout"
            android:gravity="center"
            android:padding="2dp"
            android:text="رقم الحساب البريدي"
            android:textSize="10sp" />

    </LinearLayout>


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:clickable="true"
        app:backgroundTint="#76AFC8"
        app:srcCompat="@drawable/ic_check" />
</LinearLayout>